    <item>
        <shape android:shape="oval" >
            <solid android:color="@android:color/white" />

            <size
                android:height="@dimen/automute_indicator_outer_diameter"
                android:width="@dimen/automute_indicator_outer_diameter" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/automute_indicator_inner_offset"
        android:left="@dimen/automute_indicator_inner_offset"
        android:right="@dimen/automute_indicator_inner_offset"
        android:top="@dimen/automute_indicator_inner_offset">
        <shape android:shape="oval" >
            <solid android:color="#00EE00" />

            <size
                android:height="@dimen/automute_indicator_inner_diameter"
                android:width="@dimen/automute_indicator_inner_diameter" />
        </shape>
    </item>

</layer-list>